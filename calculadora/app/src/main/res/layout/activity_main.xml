<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Calculo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:ellipsize="start"
        android:text=""/>



    <TextView
        android:id="@+id/Resultado_t"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:textSize="35sp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limpar"
            style="@style/operadores_button"
            android:text="C" />

        <TextView
            android:id="@+id/divisao"
            style="@style/operadores_button"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_sete"
            style="@style/Numeros_button"
            android:text="7" />
        <TextView
            android:id="@+id/numero_oito"
            style="@style/Numeros_button"
            android:text="8" />
        <TextView
            android:id="@+id/numero_nove"
            style="@style/Numeros_button"
            android:text="9" />
        <TextView
            android:id="@+id/multiplicacao"
            style="@style/operadores_button"
            android:text="x" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_quatro"
            style="@style/Numeros_button"
            android:text="4" />
        <TextView
            android:id="@+id/numero_cinco"
            style="@style/Numeros_button"
            android:text="5" />
        <TextView
            android:id="@+id/numero_seis"
            style="@style/Numeros_button"
            android:text="6" />
        <TextView
            android:id="@+id/subtracao"
            style="@style/operadores_button"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_um"
            style="@style/Numeros_button"
            android:text="1" />
        <TextView
            android:id="@+id/numero_dois"
            style="@style/Numeros_button"
            android:text="2" />
        <TextView
            android:id="@+id/numero_tres"
            style="@style/Numeros_button"
            android:text="3" />
        <TextView
            android:id="@+id/adicao"
            style="@style/operadores_button"
            android:text="+" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ponto"
                style="@style/Numeros_button"
                android:text="." />

            <TextView
                android:id="@+id/numero_zero"
                style="@style/Numeros_button"
                android:text="0" />

            <ImageView
                android:id="@+id/backspace"
                style="@style/Numeros_button"
                android:src="@drawable/backspace"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/igual"
                style="@style/operadores_button"
                android:text="=" />


        </LinearLayout>


</LinearLayout>